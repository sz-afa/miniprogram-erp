.containers .header-class{
  position: relative;
  left: 0;
  top: 0;
  height: 100px;
  padding-left: 15px;
  font-size: 14px;
  display: flex;
  background-color: #1898fa;
}
.containers .header-class .userphoto-class{
  display: inline-block;
}
.containers .header-class .userphoto{
  width: 90px;
  height: 90px;
  border-radius: 50px;
}
.containers .header-class .usertext-class{
  display: inline-block;
  margin-left: 15px;
  margin-top: 5px;
  color: #ffffff;
}
.containers .body-class{
  height: calc(75vh - 100px);
}
.containers .body-class .body-item{
  height: 100%;
  width: 100%;
}
.containers .footer-class{
  display: flex;
  flex-direction: column;
  height: 25vh;
  background-color: #ecf1f5;
}
.containers .footer-class .userphone{
  position: relative;
  font-size: 16px;
  margin: 0 auto;
  font-weight: 600;
  top: 20px;
}
.containers .footer-class .footer-text{
  font-size: 12px;
  font-weight: 500;
  position: relative;
  top: 36px;
  margin: 0 auto;
}
.containers .footer-class .button-class{
  position: absolute;
  bottom: 10px;
  width: 96%;
}
.containers .footer-class .button-class .phone-class{
  position: relative;
  background-color: #1898fa;
  width: 100%;
  margin-left: 2%;
  border-radius: 10px;
  font-size: 700;
  color: #ffffff;
  box-shadow: 0 3px 3px #1898fa;
}

.view1{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}