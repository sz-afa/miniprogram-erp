<view>
  <van-cell-group>
    <van-field
    value="{{ phone }}"
    label="手机号"
    clearable
    placeholder="请输入手机号"
    error-message="{{errorMsg}}"
    bind:input="checkNumber"
    maxlength='11'
    border="{{ false }}"
  />
    <van-field
      value="{{ sms }}"
      center
      clearable
      maxlength='6'
      label="短信验证码"
      placeholder="请输入短信验证码"
      border="{{ false }}"
      use-button-slot
    >
      <van-button slot="button" size="small" disabled="{{disableSendBtn}}" type="primary"
        >发送验证码</van-button
      >
    </van-field>
  </van-cell-group>
</view>