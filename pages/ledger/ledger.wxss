/* pages/ledger/ledger.wxss */
.containers .containers-top{
  position: relative;
  width: 100%;
  height: 100px;
  top: 0;
  left: 0;
  background-color: #1898FA;
}
.containers .containers-bottom{
  position: relative;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background-color: rgb(142, 159, 160);
}
.containers .containers-top .top-body{
  display: flex;
  flex-direction: column;
  position: relative;
  top: 10px;
}
.containers .top-body .body-num{
  margin: 0 auto;
  font-size: 25px;
  color: #ffffff;
}
.containers .top-body .body-text{
  margin: 0 auto;
  font-size: 15px;
  color: #ffffff;
  letter-spacing: 1px;
}
.containers .containers-bottom{
  height: calc(100vh - 100px);
  background-color: #e2f2f5;
}
.containers .containers-bottom .bottom-body{
  position: absolute;
  width: 96%;
  margin-left: 2%;
  display: flex;
  flex-direction: column;
  top: -42px;
}
.containers .containers-bottom .bottom-body .bodys{
  position: relative;
  top: 20px;
  margin-bottom: 20px;
}
.containers .containers-bottom .body-1{
  border-radius: 10px;
  top: 0;
}
.containers .containers-bottom .customclass{
  border-radius: 10px;
  height: 50px;
  border: 1px solid #f5eeee;
  box-shadow: 0px 5px 5px #e0dede;
  margin: auto 0;
}